@using WebApplication1.Models;
@model PagedList.IPagedList<menu>
@using PagedList.Mvc;
@{
    ViewBag.Title = "List Menu";
    Layout = "~/Views/Layout/LayoutAdmin.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Khuyến Mãi</th>
            <th>Hình</th>
            <th>Chi Tiết</th>


            <th>Sửa | Xóa</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
        <tr class="@item.id">
            <td>@item.name</td>
            <td>@item.price.ToString("N0")</td>
            <td>@item.promotion_price.ToString("N0")</td>
            <td><img src="~/assets/images/thuc_don/@item.image" style="width: 100px"></td>
            <td style="width : 200px;">@item.detail</td>
            <td>
                <a href="@Url.Action("ViewDetail","AddMenu",new {@id = item.id })"><i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i></a> |
                <a href="@Url.Action("Delete","AddMenu",new {@id = item.id })"><i class="fa fa-trash-o fa-2x" aria-hidden="true"></i></a>
            </td>
        </tr>
            }



        }
    </tbody>
</table>
<ul class="pagination pagination-lg">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</ul>



