@using WebApplication1.Models;
@model List<BillCusModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/LayoutAdmin.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Tên khách hàng</th>
            <th>Số Điện thoại</th>
            <th>Địa Chỉ</th>
            <th>Price</th>
            <th>Date Order</th>
            <th>Note</th>
            <th>Sửa | Xóa|</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var item in Model) {
            <tr>
                <td>@item.namecus</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.price.ToString("N0")</td>
                <td>@item.date</td>
                <td>@item.status</td>

                <td>
                    <a href="@Url.Action("Edit","Bill",new {@id = item.idbill })"><i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i></a> |
                    <a href="@Url.Action("Delete","Bill",new {@id = item.idbill })"><i class="fa fa-trash-o fa-2x" aria-hidden="true"></i></a>
                   
                </td>
            </tr>
            }
        }
    </tbody>
</table>
