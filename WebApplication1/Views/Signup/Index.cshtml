@using WebApplication1.Models;
@model RegisterModel
@using BotDetect.Web.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/LayoutUser.cshtml";
}
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl"
      rel="stylesheet" type="text/css" />

@{ MvcCaptcha registerCaptcha = new MvcCaptcha("registerCaptcha"); }
<link href="~/public/assets/vendors/style.css" rel="stylesheet" />
<div data-bottom-top="background-position: 50% 50px;" data-center="background-position: 50% 0px;" data-top-bottom="background-position: 50% -50px;" class="page-title page-menu">
    <div class="container">
        <div class="title-wrapper">
            <div data-top="transform: translateY(0px);opacity:1;" data--20-top="transform: translateY(-5px);" data--50-top="transform: translateY(-15px);opacity:0.8;" data--120-top="transform: translateY(-30px);opacity:0;" data-anchor-target=".page-title" class="title">Signup</div>
            <div data-top="opacity:1;" data--120-top="opacity:0;" data-anchor-target=".page-title" class="divider"><span class="line-before"></span><span class="dot"></span><span class="line-after"></span></div>
            <div data-top="transform: translateY(0px);opacity:1;" data--20-top="transform: translateY(5px);" data--50-top="transform: translateY(15px);opacity:0.8;" data--120-top="transform: translateY(30px);opacity:0;" data-anchor-target=".page-title" class="subtitle">The various dishes are waiting for your coming to enjoy its</div>
        </div>
    </div>
</div>
<div class="banner-bottom">
    <div class="container">
        <!-- news-and-events -->
        <div class="row carousel-holder">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <div class="panel panel-default">
                    <h2>Sign up</h2>
                    <div class="panel-body">
                        @using (Html.BeginForm("Register", "Signup", FormMethod.Post))
    {
        if (ViewBag.Success != null)
        {
                    <div class="alert alert-success">@ViewBag.Success</div>
}
                    @Html.ValidationSummary(false, "", new { @class = " text-danger" });

                    <div>
                        <label>Full name</label>


                        @Html.TextBoxFor(model => model.Fullname, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "FullName" })
                        @Html.ValidationMessageFor(model => model.Fullname, "", new { @class = "text-danger" })
                    </div>
                    <br>
                    <div>
                        <label>Username</label>

                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Username" })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div>
                        <label>Email</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div>
                        <label>Address</label>
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Address" })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                    <br>
                    <div>
                        <label>Phone</label>
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Phone" })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div>
                        <label>Birth Date</label>
                        @Html.TextBoxFor(model => model.BirthDate, new { @class = "form-control", @placeholder = "Birth Date" })
                        @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div>
                        <label>Enter Password</label>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <br>
                    <div>
                        <label>Re enter password</label>

                        @Html.PasswordFor(model => model.Cofirm, new { @class = "form-control", @placeholder = "Password" })
                        @Html.ValidationMessageFor(model => model.Cofirm, "", new { @class = "text-danger" })
                    </div>
                    <br>
                    <div>
                        @Html.Captcha(registerCaptcha)
                        @Html.TextBox("CaptchaCode")
                    </div>
                    <br />
                    <button type="submit" class="btn btn-success">
                        Submit
                    </button>
}
                    </div>
                </div>
            </div>
            <div class="col-md-2">
            </div>
            <div class="clearfix"></div>
        </div>
        <!-- //news-and-events -->
    </div>
</div>

