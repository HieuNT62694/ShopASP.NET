@using WebApplication1.Models;

@model List<menu>

@{
    foreach (var menu in Model)
    {
        <div class="col-md-2 col-sm-4 col-xs-12">
            <div class="item product-01">
                <div class="block-img">
                    <img src="~/assets/images/thuc_don/@menu.image" alt="" style="height: 100px;">
                    <div class="group-btn"><a href="@Url.Action("Index","FoodDetail",new {@id = @menu.id })" class="swin-btn btn-link"><i class="icons fa fa-link"></i></a><a href="@Url.Action("AddIteminMenu","Cart",new { @id = @menu.id,@quantity = 1 })" class="swin-btn btn-add-to-card"><i class="fa fa-shopping-basket"></i></a></div>
                </div>
                <a href="@Url.Action("Index","ThucDon",new {@id = menu.id})"><h5 class="title">@menu.name</h5><span class="price woocommerce-Price-amount amount"><span class="price-symbol">$</span>@menu.price.ToString("N0")</span></a>
            </div>
        </div>
    }
}